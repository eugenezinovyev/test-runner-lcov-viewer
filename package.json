{
  "name": "test-runner-lcov-viewer",
  "version": "1.0.0",
  "description": "A showcase of Node.js test runner and lcov viewer reporter",
  "type": "module",
  "scripts": {
    "test": "node --test",
    "coverage": "c8 --reporter=@lcov-viewer/istanbul-report node --test"
  },
  "keywords": [
    "coverage",
    "code coverage",
    "istanbul",
    "lcov",
    "report",
    "lcov viewer"
  ],
  "author": "Eugene Zinovyev <eugene.zinovyev@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@lcov-viewer/istanbul-report": "^1.4.0",
    "c8": "^9.1.0"
  }
}
